<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ADS | Login</title>
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="page-login">
  <nav class="nav">
    <div class="nav-logo"><p>Australian Dietary Supplements (ADS)</p></div>
    <div class="nav-button">
      <a class="btn white-btn" href="/login">Sign In</a>
      <a class="btn" href="/signup">Sign Up</a>
    </div>
  </nav>

  <div class="wrapper">
    <div class="form-box">
      <div class="top">
        <span>Don't have an account? <a href="/signup">Sign Up</a></span>
        <header>Login</header>
      </div>

      <% if (typeof msg !== 'undefined' && msg) { %>
        <div class="alert <%= (msgType === 'error') ? 'alert-error' : 'alert-success' %>">
          <%= msg %>
        </div>
      <% } %>

      <form action="/login" method="post" autocomplete="off">
        <div class="input-box">
          <input type="text"
                 class="input-field"
                 name="username"
                 placeholder="Username or Email"
                 value="<%= (typeof values !== 'undefined' && values.username) ? values.username : '' %>"
                 required>
          <i class="bx bx-user"></i>
        </div>

        <div class="input-box">
          <input type="password"
                 class="input-field"
                 name="password"
                 placeholder="Password"
                 required>
          <i class="bx bx-lock-alt"></i>
        </div>

        <div class="input-box">
          <input type="submit" class="submit" value="Sign In">
        </div>
      </form>
    </div>
  </div>
</body>
</html>
