<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>ADS | Sign Up</title>
  <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
</head>
<body class="page-signup">
  <nav class="nav">
    <div class="nav-logo"><p>Australian Dietary Supplements (ADS)</p></div>
    <div class="nav-button">
      <a class="btn" href="/login">Sign In</a>
      <a class="btn white-btn" href="/signup">Sign Up</a>
    </div>
  </nav>

  <div class="wrapper">
    <div class="form-box">
      <div class="top">
        <span>Have an account? <a href="/login">Login</a></span>
        <header>Sign Up</header>
      </div>

      <!-- ALERT / MESSAGE (error or success) -->
      <% if (typeof msg !== 'undefined' && msg) { %>
        <div class="alert <%= (msgType === 'error') ? 'alert-error' : 'alert-success' %>">
          <%= msg %>
        </div>
      <% } %>

      <% const v = (typeof values !== 'undefined' && values) ? values : { firstName: "", lastName: "", email: "" }; %>

      <form action="/signup" method="post" autocomplete="off">
        <div class="two-forms">
          <div class="input-box">
            <input type="text"
                   class="input-field"
                   name="firstName"
                   placeholder="Firstname"
                   value="<%= v.firstName || '' %>"
                   required>
            <i class="bx bx-user"></i>
          </div>
          <div class="input-box">
            <input type="text"
                   class="input-field"
                   name="lastName"
                   placeholder="Lastname"
                   value="<%= v.lastName || '' %>"
                   required>
            <i class="bx bx-user"></i>
          </div>
        </div>
        <div class="input-box">
          <input type="text"
                 class="input-field"
                 name="email"
                 placeholder="Email"
                 value="<%= v.email || '' %>"
                 required>
          <i class="bx bx-envelope"></i>
        </div>

        <div class="input-box">
          <input type="password"
                 class="input-field"
                 name="password"
                 placeholder="Password"
                 required>
          <i class="bx bx-lock-alt"></i>
        </div>

        <div class="input-box">
          <input type="submit" class="submit" value="Register">
        </div>
      </form>
    </div>
  </div>
</body>
</html>
